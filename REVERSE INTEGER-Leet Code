class Solution {
    public int reverse(int x) 
    {
        int rem,len;
        double rev=0;
        Integer num=Math.abs(x);
        String b=num.toString();
        len=b.length();
      
        while(x!=0)
        {    
            rem=x%10;
            x=x/10;
            rev+=(rem*Math.pow(10,--len));
        }
        if(rev>((-1)*Math.pow(2,31))&&rev<((Math.pow(2,31))-1))
            return (int)rev;
        else
            return 0;
    }
}
